<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f1d4">

    <EditText
        android:id="@+id/editTextDZ3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textUri"
        android:text="@string/urlImage" />

    <TextView
        android:id="@+id/textViewDZ3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonDZ3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/buttonDZ3" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/circleDZ3"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        fresco:roundAsCircle="true"
        fresco:failureImage="@drawable/ic_sentiment_very_dissatisfied_black_100dp"/>
</LinearLayout>